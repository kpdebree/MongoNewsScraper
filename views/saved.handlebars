<div class="content row">

  <nav class="bg-info navbar-inverse">
    <div>
      <ul class="nav nav-pills" role="tablist">
        <li role="presentation" class="navigation"><a href="/">Reddit Politics</a></li>
        <li role="presentation" class="navigation"><a href="/">Home</a></li>
        <li role="presentation" class="navigation"><a href="/save/articles">Saved Articles</a></li>
        <li><a href="/scrape"><button type="submit" class="btn btn-success">Scrape Articles</button></a></li>
      </ul>
    </div>
  </nav>

  <div class="row">
    <div class="banner col-md-12">  
      <h1>Reddit Politics</h1>
      <p>Front page of /r/politics</p>
    </div>
  </div>
  {{#if newsArticles}}
    <div class="articleContainer row">
      {{#each newsArticles}}
        <div class="article">
          <div class="panel">
            <div class="panel-heading row bg-info navbar-inverse">
              <div class="col-md-9 title">
                <h3>{{this.title}}</h3>
              </div>
              <div class="col-md-3 link">
                <a href="#"><button type="submit" class="btn btn-danger remove" data-id={{this.id}}>Remove Article</button></a>
                <a href="#"><button type="submit" class="btn btn-success notes" data-id={{this.id}}  data-toggle="modal" data-target=#{{this.id}}> Write Note</button></a>
              </div>
            </div>
            <div class="panel-body">{{this.link}}  
            </div>
          </div> 
        </div>
           <!-- Modal -->
          <div class="modal fade" id={{this.id}} role="dialog">
            <div class="modal-dialog">
            
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Note Taker</h4>
                </div>
                <div class="modal-body">
                  <form>
                    <h5> Title</h5>
                    <input type="text" name="title" id="title">
                    <br>
                    <h5> Notes</h5>
                    <input type="text" name="notes" id="notes">
                    <br>
                    <br>
                    <button type="button" class="btn btn-info saveNote" data-id={{this.id}} data-dismiss="modal"> Submit</button>
                  </form>
                  <hr>
                  <div>
                    {{#each this.note}}
                      <div class="row">
                        <div class="col-md-11 col-sm-11 col-xs-11">
                          <p>{{this.title}}</p>
                        </div>
                        <div class="col-md-1 col-sm-1 col-xs-1">
                          <button type="button" class="btn btn-danger deleteNote" data-id={{this.id}} data-dismiss="modal"> X </button>
                        </div>                     
                      </div>
                    {{/each}}
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>  
      {{/each}}
    </div>
  {{else}}
    <div class="noArticles">
      <h2>This is where your saved articles will be kept</h2>
    </div>  
  {{/if}}
</div>
<footer class="footer row">
  <p></p>
</footer>
